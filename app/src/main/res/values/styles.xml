<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Style1">
        <item name="android:fadeEnabled">true</item>
    </style>

    <style name="Style2">
        <item name="android:textColor">#0e0f0e</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Style3">
        <item name="android:textColor">#1c35b2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Theme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#556ee7</item>
        <item name="colorPrimaryDark">#1337e7</item>
        <item name="colorAccent">#7c85b0</item>
    </style>

</resources>
